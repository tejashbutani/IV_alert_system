<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".addUpcoming">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/dashboard" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/maintxtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="36dp"
                android:fontFamily="@font/regular"
                android:text="Add Upcoming \nCheck-ups"
                android:textColor="#fff"
                android:textSize="32sp" />

            <LinearLayout
                android:elevation="6dp"
                android:background="@drawable/items"
                android:layout_marginTop="50sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="6dp"
                android:id="@+id/uplay"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/regular"
                    android:text="Fill Information"
                    android:textColor="@color/bcolorChooseblue"
                    android:textSize="18sp" />

    <EditText
        android:fontFamily="@font/regular"
        android:id="@+id/m"
        android:layout_margin="30dp"
        android:textColor="#000"
        android:inputType="number"
        android:maxLength="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile Number"/>
<!--    <EditText-->
<!--        android:fontFamily="@font/regular"-->
<!--        android:id="@+id/d"-->
<!--        android:layout_marginRight="30dp"-->
<!--        android:layout_marginLeft="30dp"-->
<!--        android:layout_marginBottom="30dp"-->
<!--        android:textColor="#000"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:hint="Date"/>-->

    <EditText
        android:fontFamily="@font/regular"
        android:id="@+id/n"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Checkup-name"/>
    <DatePicker
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d"/>




    </LinearLayout>
            <Button
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Add upcoming checkup"
                android:layout_height="50dp"
                android:id="@+id/a"
                android:background="@drawable/button"
                android:fontFamily="@font/regular"
                android:textColor="#fff" />
    <ProgressBar
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:id="@+id/up_rng"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/up_bnb"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:visibility="gone"
        app:lottie_autoPlay="true"
        app:lottie_fileName="check.json"/>

    <TextView
        android:fontFamily="@font/regular"
        android:id="@+id/up_txt"
        android:visibility="gone"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Successfully submitted"
        android:textColor="@color/bcolorChoosered"
        android:textStyle="bold"
        android:typeface="sans"
        android:textSize="24sp" />

        </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>